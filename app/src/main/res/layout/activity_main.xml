<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/SearchByName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#6cb340"
        android:onClick="Search"
        android:text="@string/SearchByName"
        app:layout_constraintBottom_toTopOf="@+id/enterName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterPostcode" />

    <EditText
        android:id="@+id/enterPostcode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:backgroundTint="#6cb340"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/EnterPostcode"
        android:textColor="#6CB340"
        app:layout_constraintBottom_toTopOf="@+id/SearchByName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SearchByPostCode" />

    <Button
        android:id="@+id/showRecent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:backgroundTint="#6cb340"
        android:onClick="Search"
        android:text="@string/ShowRecent"
        app:layout_constraintBottom_toTopOf="@+id/SearchByPostCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SearchByLocation" />

    <EditText
        android:id="@+id/enterName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#6cb340"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/EnterName"
        android:textColor="#6CB340"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SearchByName" />

    <Button
        android:id="@+id/SearchByLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:backgroundTint="#6cb340"
        android:onClick="Search"
        android:text="@string/SearchByLocation"
        app:layout_constraintBottom_toTopOf="@+id/showRecent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SearchByPostCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:backgroundTint="#6cb340"
        android:onClick="Search"
        android:text="@string/SearchByPostcode"
        app:layout_constraintBottom_toTopOf="@+id/enterPostcode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showRecent" />


</androidx.constraintlayout.widget.ConstraintLayout>

